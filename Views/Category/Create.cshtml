@model Category

@{
    ViewData["Title"] = "Create Category";
}

<form method="post">
    <div class="card text-left">
        <div class="card-header text-center bg-success text-light">
            Category
        </div>
        <div class="card-body">
            <h2 class="text-primary text-success">@ViewData["Title"]</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All"></div>
            }
            <div class="mb-3 row p-1">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

        </div>
        <div class="card-footer text-body-secondary">
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success form-control"><i class="bi bi-plus-circle"></i> Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>